            // Garantir consistência com Mode
            if (newStatus == "Standby")
            {
                inspection.Mode = "Draft"; // Standby implica Draft
            }
            else if (newStatus == "Ongoing" || newStatus == "Closed")
            {
                inspection.Mode = "Launched"; // Ongoing e Closed implicam Launched
            }

            // Validar Closed: só permitir se todas as tarefas estiverem concluídas
            if (newStatus == "Closed" && (inspection.TotalTasks == 0 || inspection.CompletedTasks < inspection.TotalTasks))
            {
                inspection.Estado = "Ongoing"; // Reverter para Ongoing se não estiver concluído
                errorMessage = "O estado 'Closed' só pode ser aplicado quando todas as tarefas estiverem concluídas.";
